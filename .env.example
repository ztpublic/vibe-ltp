# ===========================================
# Vibe LTP Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values

# ---------------------------------------------
# Server Configuration
# ---------------------------------------------
BACKEND_PORT=4000
FRONTEND_PORT=3000
# Optional: where to write exported game transcripts (JSON files)
GAME_EXPORT_DIR=./game-exports
# Optional: disable exports entirely (defaults to enabled unless NODE_ENV=test)
GAME_EXPORT_ENABLED=true

# ---------------------------------------------
# CORS Configuration
# ---------------------------------------------
# Comma-separated list of allowed origins
CORS_ORIGIN=http://localhost:3000

# ---------------------------------------------
# LLM Configuration (OpenRouter)
# ---------------------------------------------
# Required: Your OpenRouter API key
OPENROUTER_API_KEY=sk-or-v1-your-key-here

# Optional: Model to use (defaults to grok-4.1-fast:free)
# Optional: App metadata for OpenRouter
OPENROUTER_REFERRER=https://vibe-ltp.example.com
OPENROUTER_APP_TITLE=Vibe Lateral Thinking Puzzles

# ---------------------------------------------
# Frontend Configuration
# ---------------------------------------------
# Public environment variables (exposed to browser)
# Backend API URL for client-side requests
NEXT_PUBLIC_API_BASE_URL=http://localhost:4000
