{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "module": "ESNext",
    "moduleResolution": "node",
    "paths": {
      "@vibe-ltp/shared": ["../../packages/shared/src/index.ts"],
      "@vibe-ltp/puzzle-core": ["../../packages/puzzle-core/src/index.ts"],
      "@vibe-ltp/llm-client": ["../../packages/llm-client/src/index.ts"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.spec.ts", "**/*.test.ts"],
  "references": [
    { "path": "../../packages/shared" },
    { "path": "../../packages/puzzle-core" },
    { "path": "../../packages/llm-client" }
  ]
}
