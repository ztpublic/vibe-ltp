{
  "name": "vibe-ltp",
  "version": "0.1.0",
  "private": true,
  "description": "Lateral thinking puzzle game - monorepo",
  "scripts": {
    "dev": "pnpm -r --parallel --filter \"@vibe-ltp/server\" --filter \"@vibe-ltp/web\" run dev",
    "dev:web": "pnpm -C apps/web dev",
    "dev:server": "pnpm -C apps/server dev",
    "build": "pnpm run build:packages && pnpm run build:apps",
    "build:packages": "pnpm -r --filter './packages/*' build",
    "build:server": "pnpm -C apps/server build",
    "build:web": "pnpm -C apps/web build",
    "build:apps": "pnpm run build:server && pnpm run build:web",
    "lint": "eslint .",
    "typecheck": "pnpm -r exec tsc --noEmit",
    "test": "vitest run",
    "test:agent": "node test-puzzle-agent.mjs",
    "agent-lab:demo": "pnpm -C packages/agent-lab demo",
    "agent-lab:demo:connections": "pnpm -C packages/agent-lab demo:connections",
    "agent-lab:demo:history": "pnpm -C packages/agent-lab demo:history",
    "agent-lab:demo:keypoints": "pnpm -C packages/agent-lab demo:keypoints",
    "e2e": "playwright test",
    "e2e:random": "RUN_RANDOM_E2E=1 playwright test apps/web/tests/e2e/randomGame.manual.spec.ts --headed",
    "e2e:complete": "playwright test apps/web/tests/e2e/chatbot.spec.ts -g \"should handle complete gameplay flow with questions and answers\" --headed",
    "format": "prettier --write .",
    "clean": "rimraf dist apps/*/dist packages/*/dist **/*.tsbuildinfo",
    "sb": "pnpm -C apps/web storybook",
    "storybook:web": "pnpm -C apps/web storybook",
    "build-storybook:web": "pnpm -C apps/web build-storybook"
  },
  "devDependencies": {
    "@vibe-ltp/config": "workspace:*",
    "@playwright/test": "^1.48.0",
    "@types/node": "^20.16.11",
    "@types/uuid": "^11.0.0",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.10.0",
    "eslint": "^9.13.0",
    "concurrently": "^9.1.2",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.1",
    "typescript": "^5.6.3",
    "vitest": "^2.1.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.12.3",
  "dependencies": {
    "uuid": "^13.0.0"
  }
}
